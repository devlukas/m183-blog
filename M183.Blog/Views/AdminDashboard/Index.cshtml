@using M183.Blog.Models;
@model DashboardViewModel
@{
    ViewBag.Title = "Home Page";
}

<h2>Admin Dashboard</h2>
<div class="row">
    <div class="col-lg-6 col-sm-12">
        @using (Html.BeginForm("Index", "AdminDashboard", FormMethod.Get, new { @class = "form-inline", role = "form" }))
        {
            <div class="form-group">
                @Html.TextBoxFor(m => m.Search, new { @class = "form-control", placeholder = "Durchsuchen" })
            </div>
            <button type="submit" class="btn btn-primary">Suchen</button>
        }
    </div>
    </div>
<div class="posts">
    @foreach (PostViewModel post in Model.Posts)
    {
        <div class="post">
            <div class="header">
                <h4>@Html.ActionLink(post.Title, "Index", "Post", new { post.Id }, null)</h4>
            </div>
            <div class="content">
                <p>@post.Content</p>
            </div>
        </div>
    }
    @if(Model.Posts.Count == 0)
    {
        <p style="margin-top: 20px;">Keine Posts gefunden</p>
    }
</div>
